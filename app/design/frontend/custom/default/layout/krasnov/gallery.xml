<?xml version="1.0"?>
<layout version="0.1.0">
    <gallery_index_index>
        <reference name="breadcrumbs">
            <action method="addCrumb" translate="params.label params.title">
                <name>home_bread</name>
                <params>
                    <label>Home</label>
                    <title>Home</title>
                    <link>/</link>
                </params>
            </action>
            <action method="addCrumb" translate="params.label params.title">
                <name>gallery_bread</name>
                <params>
                    <label>Gallery</label>
                    <title>Gallery</title>
                    <link />
                </params>
            </action>
        </reference>
        <reference name="content">
            <block type="gallery/page" template="gallery/page.phtml"/>
        </reference>
    </gallery_index_index>
</layout>
