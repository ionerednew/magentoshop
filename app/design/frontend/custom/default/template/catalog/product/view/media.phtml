/**
 * Product media data template
 *
 * @see Mage_Catalog_Block_Product_View_Media
 */
?>
<?php
    $_product = $this->getProduct();
    $_helper = $this->helper('catalog/output');
?>
<?php if ($_product->getImage()): ?>
<div class="product-image product-image-zoom default-zoom">
    <?php if ($label = $_product->getAttributeText('label')) : ?>
        <div class="product__item-label">
            <span><?= $label ?></span>
        </div>
    <?php endif; ?>
    <img class="product__view-image" data-action="zoom" src="<?php echo $this->helper('catalog/image')->init($_product, 'image');?>">
</div>
<?php endif; ?>
<?php if (count($this->getGalleryImages()) > 0): ?>
<div class="more-views container-slider">
    <div class="tumbSlider-none">
        <ul class="slider">
        <?php foreach ($this->getGalleryImages() as $_image): ?>
            <li>
                <a title="<?php echo $this->htmlEscape($_image->getLabel()) ?>">
                    <img data-action="zoom" src="<?php echo $this->helper('catalog/image')->init($this->getProduct(), 'thumbnail', $_image->getFile()); ?>" alt="<?php echo $this->htmlEscape($_image->getLabel()) ?>" />
                </a>
            </li>
        <?php endforeach; ?>
        </ul>
    </div>
</div>
<?php endif; ?>
